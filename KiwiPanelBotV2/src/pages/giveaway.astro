---
import Layout from '../layouts/Layout.astro';

// Simuler les données des giveaways
const user = {
	username: "StreamerKiwi",
	isAdmin: true,
	isParticipant: false
};

const activeGiveaways = [
	{
		id: 1,
		title: "🎮 Clavier mécanique RGB Gaming",
		description: "Clavier mécanique premium avec éclairage RGB personnalisable, switches Cherry MX Blue, parfait pour le gaming et le streaming !",
		image: "https://via.placeholder.com/400x200",
		participants: 127,
		maxParticipants: 500,
		endDate: "2025-10-01T20:00:00",
		status: "active",
		requirements: ["Suivre la chaîne", "Être présent dans le chat"],
		prize: "Clavier Corsair K95 RGB (250€)",
		creator: "StreamerKiwi"
	},
	{
		id: 2,
		title: "💰 Carte Steam 50€",
		description: "Une carte cadeau Steam de 50€ pour acheter tous vos jeux préférés ! Parfait pour agrandir votre bibliothèque de jeux.",
		image: "https://via.placeholder.com/400x200",
		participants: 89,
		maxParticipants: 200,
		endDate: "2025-09-28T19:30:00",
		status: "active",
		requirements: ["Être abonné", "Utiliser la commande !giveaway"],
		prize: "Carte Steam 50€",
		creator: "StreamerKiwi"
	}
];

const endedGiveaways = [
	{
		id: 3,
		title: "🎧 Casque Gaming Pro",
		description: "Casque gaming professionnel avec micro antibruit",
		image: "https://via.placeholder.com/400x200",
		participants: 234,
		winner: "LuckyGamer123",
		endDate: "2025-09-20T21:00:00",
		status: "ended",
		prize: "Casque SteelSeries Arctis 7"
	},
	{
		id: 4,
		title: "🖱️ Souris Gaming",
		description: "Souris gaming haute précision avec capteur optique",
		image: "https://via.placeholder.com/400x200", 
		participants: 156,
		winner: "ProPlayer456",
		endDate: "2025-09-15T20:30:00",
		status: "ended",
		prize: "Souris Logitech G Pro X"
	}
];
---

<Layout title="Giveaways - TwitchBot" isAdmin={user.isAdmin}>
	<div class="giveaway-header">
		<h1 class="page-title">🎁 Centre des Giveaways</h1>
		<p class="page-subtitle">
			{user.isAdmin ? "Gérez vos concours et tirez au sort les gagnants" : "Participez aux concours et tentez de gagner des prix incroyables !"}
		</p>
		
		{user.isAdmin && (
			<div class="admin-actions">
				<button class="btn btn-primary" onclick="showCreateGiveawayModal()">
					+ Créer un nouveau giveaway
				</button>
				<button class="btn btn-secondary">
					📊 Statistiques
				</button>
			</div>
		)}
	</div>

	<!-- Active Giveaways -->
	<section class="giveaways-section">
		<h2 class="section-title">🎊 Giveaways Actifs</h2>
		
		{activeGiveaways.length > 0 ? (
			<div class="giveaways-grid">
				{activeGiveaways.map(giveaway => (
					<div class="giveaway-card active-giveaway">
						<div class="giveaway-image">
							<img src={giveaway.image} alt={giveaway.title} />
							<div class="giveaway-status">
								<span class="status-badge active">🔥 Actif</span>
							</div>
						</div>
						
						<div class="giveaway-content">
							<h3 class="giveaway-title">{giveaway.title}</h3>
							<p class="giveaway-description">{giveaway.description}</p>
							
							<div class="giveaway-info">
								<div class="info-item">
									<span class="info-label">🏆 Prix:</span>
									<span class="info-value">{giveaway.prize}</span>
								</div>
								<div class="info-item">
									<span class="info-label">👥 Participants:</span>
									<span class="info-value">{giveaway.participants}/{giveaway.maxParticipants}</span>
								</div>
								<div class="info-item">
									<span class="info-label">⏰ Fin:</span>
									<span class="info-value">{new Date(giveaway.endDate).toLocaleDateString('fr-FR')}</span>
								</div>
							</div>

							<div class="giveaway-progress">
								<div class="progress-bar">
									<div 
										class="progress-fill" 
										style={`width: ${(giveaway.participants / giveaway.maxParticipants) * 100}%`}
									></div>
								</div>
								<span class="progress-text">
									{Math.round((giveaway.participants / giveaway.maxParticipants) * 100)}% complet
								</span>
							</div>

							<div class="giveaway-requirements">
								<h4>📋 Conditions de participation:</h4>
								<ul>
									{giveaway.requirements.map(req => (
										<li>{req}</li>
									))}
								</ul>
							</div>

							<div class="giveaway-actions">
								{user.isAdmin ? (
									<>
										<button class="btn btn-warning">✏️ Modifier</button>
										<button class="btn btn-success">🎲 Tirer au sort</button>
										<button class="btn btn-error">🗑️ Supprimer</button>
									</>
								) : (
									<>
										{user.isParticipant ? (
											<button class="btn btn-outline" disabled>
												✅ Déjà inscrit
											</button>
										) : (
											<button class="btn btn-primary" onclick={`participateGiveaway(${giveaway.id})`}>
												🎯 Participer
											</button>
										)}
										<button class="btn btn-secondary">
											👥 Voir participants
										</button>
									</>
								)}
							</div>
						</div>
					</div>
				))}
			</div>
		) : (
			<div class="empty-state">
				<div class="empty-icon">🎁</div>
				<h3>Aucun giveaway actif</h3>
				<p>Il n'y a actuellement aucun concours en cours. Revenez bientôt !</p>
			</div>
		)}
	</section>

	<!-- Ended Giveaways -->
	<section class="giveaways-section">
		<h2 class="section-title">🏆 Giveaways Terminés</h2>
		
		<div class="giveaways-grid">
			{endedGiveaways.map(giveaway => (
				<div class="giveaway-card ended-giveaway">
					<div class="giveaway-image">
						<img src={giveaway.image} alt={giveaway.title} />
						<div class="giveaway-status">
							<span class="status-badge ended">✅ Terminé</span>
						</div>
					</div>
					
					<div class="giveaway-content">
						<h3 class="giveaway-title">{giveaway.title}</h3>
						<p class="giveaway-description">{giveaway.description}</p>
						
						<div class="giveaway-info">
							<div class="info-item">
								<span class="info-label">🏆 Prix:</span>
								<span class="info-value">{giveaway.prize}</span>
							</div>
							<div class="info-item">
								<span class="info-label">🎉 Gagnant:</span>
								<span class="info-value winner">{giveaway.winner}</span>
							</div>
							<div class="info-item">
								<span class="info-label">👥 Participants:</span>
								<span class="info-value">{giveaway.participants}</span>
							</div>
							<div class="info-item">
								<span class="info-label">📅 Terminé le:</span>
								<span class="info-value">{new Date(giveaway.endDate).toLocaleDateString('fr-FR')}</span>
							</div>
						</div>

						<div class="giveaway-actions">
							<button class="btn btn-outline">
								👁️ Voir détails
							</button>
							{user.isAdmin && (
								<button class="btn btn-secondary">
								📊 Statistiques
								</button>
							)}
						</div>
					</div>
				</div>
			))}
		</div>
	</section>

	<!-- Create Giveaway Modal (Admin only) -->
	{user.isAdmin && (
		<div id="createGiveawayModal" class="modal" style="display: none;">
			<div class="modal-overlay" onclick="hideCreateGiveawayModal()"></div>
			<div class="modal-content">
				<div class="modal-header">
					<h2>🎁 Créer un nouveau giveaway</h2>
					<button class="modal-close" onclick="hideCreateGiveawayModal()">✕</button>
				</div>
				
				<form class="create-giveaway-form">
					<div class="form-group">
						<label class="form-label">Titre du giveaway</label>
						<input type="text" class="form-input" placeholder="Ex: Clavier Gaming RGB" required />
					</div>
					
					<div class="form-group">
						<label class="form-label">Description</label>
						<textarea class="form-textarea" placeholder="Décrivez le prix et les conditions..." required></textarea>
					</div>
					
					<div class="form-row">
						<div class="form-group">
							<label class="form-label">Prize</label>
							<input type="text" class="form-input" placeholder="Ex: Clavier Corsair K95" required />
						</div>
						
						<div class="form-group">
							<label class="form-label">Max participants</label>
							<input type="number" class="form-input" placeholder="500" required />
						</div>
					</div>
					
					<div class="form-group">
						<label class="form-label">URL de l'image</label>
						<input type="url" class="form-input" placeholder="https://..." />
					</div>
					
					<div class="form-group">
						<label class="form-label">Date de fin</label>
						<input type="datetime-local" class="form-input" required />
					</div>
					
					<div class="form-group">
						<label class="form-label">Conditions de participation</label>
						<div class="requirements-list">
							<div class="requirement-item">
								<input type="checkbox" checked />
								<input type="text" class="form-input" value="Suivre la chaîne" />
								<button type="button" class="btn-icon remove-requirement">🗑️</button>
							</div>
						</div>
						<button type="button" class="btn btn-outline" onclick="addRequirement()">
							+ Ajouter une condition
						</button>
					</div>
					
					<div class="modal-actions">
						<button type="button" class="btn btn-outline" onclick="hideCreateGiveawayModal()">
							Annuler
						</button>
						<button type="submit" class="btn btn-primary">
							🎁 Créer le giveaway
						</button>
					</div>
				</form>
			</div>
		</div>
	)}

	<!-- Statistics Panel (Admin only) -->
	{user.isAdmin && (
		<section class="stats-section">
			<h2 class="section-title">📊 Statistiques des Giveaways</h2>
			
			<div class="stats-grid">
				<div class="stat-card">
					<div class="stat-icon">🎁</div>
					<div class="stat-content">
						<h3>Total Giveaways</h3>
						<div class="stat-value">{activeGiveaways.length + endedGiveaways.length}</div>
						<span class="stat-change text-secondary">Tous les temps</span>
					</div>
				</div>
				
				<div class="stat-card">
					<div class="stat-icon">👥</div>
					<div class="stat-content">
						<h3>Participants Total</h3>
						<div class="stat-value">
							{activeGiveaways.reduce((acc, g) => acc + g.participants, 0) + 
							 endedGiveaways.reduce((acc, g) => acc + g.participants, 0)}
						</div>
						<span class="stat-change text-success">+15% ce mois</span>
					</div>
				</div>
				
				<div class="stat-card">
					<div class="stat-icon">🔥</div>
					<div class="stat-content">
						<h3>Giveaways Actifs</h3>
						<div class="stat-value">{activeGiveaways.length}</div>
						<span class="stat-change text-warning">En cours</span>
					</div>
				</div>
				
				<div class="stat-card">
					<div class="stat-icon">🏆</div>
					<div class="stat-content">
						<h3>Terminés</h3>
						<div class="stat-value">{endedGiveaways.length}</div>
						<span class="stat-change text-success">Complétés</span>
					</div>
				</div>
			</div>
		</section>
	)}
</Layout>

<style>
	.giveaway-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.page-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		background: linear-gradient(135deg, var(--primary), var(--secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-subtitle {
		font-size: 1.125rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.admin-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	/* Giveaways Grid */
	.giveaways-section {
		margin-bottom: 4rem;
	}

	.giveaways-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
	}

	.giveaway-card {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: 16px;
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.giveaway-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.active-giveaway {
		border-color: var(--success);
		box-shadow: 0 0 20px rgba(0, 245, 255, 0.1);
	}

	.ended-giveaway {
		opacity: 0.8;
		border-color: var(--border);
	}

	/* Giveaway Image */
	.giveaway-image {
		position: relative;
		height: 200px;
		overflow: hidden;
	}

	.giveaway-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.giveaway-status {
		position: absolute;
		top: 1rem;
		right: 1rem;
	}

	.status-badge {
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 600;
	}

	.status-badge.active {
		background: rgba(0, 245, 255, 0.2);
		color: var(--success);
		border: 1px solid var(--success);
	}

	.status-badge.ended {
		background: rgba(173, 173, 184, 0.2);
		color: var(--text-secondary);
		border: 1px solid var(--text-secondary);
	}

	/* Giveaway Content */
	.giveaway-content {
		padding: 2rem;
	}

	.giveaway-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 1rem;
	}

	.giveaway-description {
		color: var(--text-secondary);
		margin-bottom: 1.5rem;
		line-height: 1.5;
	}

	.giveaway-info {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.info-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.5rem;
		background: var(--surface-light);
		border-radius: 6px;
	}

	.info-label {
		font-weight: 500;
		color: var(--text-secondary);
		font-size: 0.9rem;
	}

	.info-value {
		font-weight: 600;
		color: var(--text-primary);
	}

	.info-value.winner {
		color: var(--secondary);
		font-weight: 700;
	}

	/* Progress Bar */
	.giveaway-progress {
		margin-bottom: 1.5rem;
	}

	.progress-bar {
		width: 100%;
		height: 8px;
		background: var(--surface-light);
		border-radius: 4px;
		overflow: hidden;
		margin-bottom: 0.5rem;
	}

	.progress-fill {
		height: 100%;
		background: linear-gradient(135deg, var(--primary), var(--secondary));
		border-radius: 4px;
		transition: width 0.3s ease;
	}

	.progress-text {
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	/* Requirements */
	.giveaway-requirements {
		margin-bottom: 2rem;
	}

	.giveaway-requirements h4 {
		font-size: 1rem;
		color: var(--text-primary);
		margin-bottom: 0.75rem;
	}

	.giveaway-requirements ul {
		list-style: none;
		padding: 0;
	}

	.giveaway-requirements li {
		padding: 0.5rem;
		background: var(--surface-light);
		border-radius: 6px;
		margin-bottom: 0.5rem;
		color: var(--text-secondary);
		font-size: 0.9rem;
	}

	.giveaway-requirements li:before {
		content: "✓";
		color: var(--success);
		font-weight: bold;
		margin-right: 0.5rem;
	}

	/* Giveaway Actions */
	.giveaway-actions {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}

	.giveaway-actions .btn {
		flex: 1;
		min-width: auto;
		font-size: 0.875rem;
		padding: 0.75rem 1rem;
	}

	/* Empty State */
	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--text-secondary);
	}

	.empty-icon {
		font-size: 4rem;
		margin-bottom: 1rem;
	}

	.empty-state h3 {
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		color: var(--text-primary);
	}

	/* Modal */
	.modal {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	.modal-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(5px);
	}

	.modal-content {
		position: relative;
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: 16px;
		max-width: 600px;
		width: 100%;
		max-height: 90vh;
		overflow-y: auto;
		z-index: 1;
	}

	.modal-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 2rem 1rem 2rem;
		border-bottom: 1px solid var(--border);
	}

	.modal-header h2 {
		margin: 0;
		color: var(--text-primary);
	}

	.modal-close {
		background: none;
		border: none;
		font-size: 1.5rem;
		color: var(--text-secondary);
		cursor: pointer;
		padding: 0.5rem;
		border-radius: 50%;
		transition: all 0.3s ease;
	}

	.modal-close:hover {
		background: var(--surface-light);
		color: var(--text-primary);
	}

	.create-giveaway-form {
		padding: 2rem;
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.requirements-list {
		margin-bottom: 1rem;
	}

	.requirement-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 0.75rem;
	}

	.requirement-item input[type="checkbox"] {
		flex-shrink: 0;
	}

	.requirement-item input[type="text"] {
		flex-grow: 1;
	}

	.remove-requirement {
		flex-shrink: 0;
		background: none;
		border: none;
		color: var(--error);
		cursor: pointer;
		padding: 0.5rem;
		border-radius: 4px;
		transition: all 0.3s ease;
	}

	.remove-requirement:hover {
		background: rgba(255, 107, 107, 0.2);
	}

	.modal-actions {
		display: flex;
		gap: 1rem;
		justify-content: flex-end;
		margin-top: 2rem;
	}

	/* Stats Section */
	.stats-section {
		margin-bottom: 4rem;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.stat-card {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: 12px;
		padding: 1.5rem;
		display: flex;
		align-items: center;
		gap: 1rem;
		transition: all 0.3s ease;
	}

	.stat-card:hover {
		border-color: var(--secondary);
		transform: translateY(-2px);
	}

	.stat-icon {
		font-size: 2rem;
		background: var(--surface-light);
		width: 48px;
		height: 48px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.stat-content h3 {
		font-size: 0.875rem;
		color: var(--text-secondary);
		margin-bottom: 0.25rem;
	}

	.stat-value {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 0.25rem;
	}

	.stat-change {
		font-size: 0.75rem;
		font-weight: 500;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.giveaways-grid {
			grid-template-columns: 1fr;
		}

		.giveaway-actions {
			flex-direction: column;
		}

		.admin-actions {
			flex-direction: column;
			align-items: center;
		}

		.form-row {
			grid-template-columns: 1fr;
		}

		.modal {
			padding: 1rem;
		}

		.modal-content {
			max-height: 95vh;
		}

		.create-giveaway-form {
			padding: 1.5rem;
		}

		.modal-actions {
			flex-direction: column;
		}
	}
</style>

<script>
	function showCreateGiveawayModal() {
		document.getElementById('createGiveawayModal').style.display = 'flex';
		document.body.style.overflow = 'hidden';
	}

	function hideCreateGiveawayModal() {
		document.getElementById('createGiveawayModal').style.display = 'none';
		document.body.style.overflow = 'auto';
	}

	function participateGiveaway(giveawayId) {
		// Simulate participation
		alert(`Vous participez au giveaway #${giveawayId} ! Bonne chance ! 🍀`);
	}

	function addRequirement() {
		const requirementsList = document.querySelector('.requirements-list');
		const newRequirement = document.createElement('div');
		newRequirement.className = 'requirement-item';
		newRequirement.innerHTML = `
			<input type="checkbox" checked />
			<input type="text" class="form-input" placeholder="Nouvelle condition..." />

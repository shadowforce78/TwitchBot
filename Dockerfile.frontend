# Production stage
FROM node:20-alpine
WORKDIR /app

# Copier les fichiers serveur
COPY serveur/package*.json ./serveur/
RUN cd serveur && npm install --production

# Copier les fichiers du serveur
COPY serveur ./serveur

# Copier le .env si n√©cessaire (ou passer via docker-compose)
# COPY .env ./

EXPOSE 3003

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost:3003/ || exit 1

CMD ["node", "serveur/index.js"]

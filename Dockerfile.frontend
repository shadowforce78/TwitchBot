# Production stage
FROM node:20-alpine
WORKDIR /app

# Copier d'abord tout le répertoire serveur
COPY serveur ./serveur

# Installer les dépendances de production
RUN cd serveur && npm install --production

EXPOSE 3003

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost:3003/ || exit 1

CMD ["node", "serveur/index.js"]
